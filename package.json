{
  "name": "@mojaloop/sdk-pisp-scheme-adapter",
  "version": "11.0.1",
  "description": "SDK PISP Scheme Adapter ",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "audit:resolve": "SHELL=sh resolve-audit",
    "audit:check": "SHELL=sh check-audit",
    "build": "tsc && cp -R config dist",
    "build:api": "npm run build:api:inbound && npm run build:api:outbound",
    "build:api:inbound": "swagger-cli bundle -o ./src/interface/api-inbound.yaml -t yaml ./src/interface/api-inbound-template.yaml && swagger-cli validate ./src/interface/api-inbound.yaml",
    "build:api:outbound": "swagger-cli bundle -o ./src/interface/api-outbound.yaml -t yaml ./src/interface/api-outbound-template.yaml && swagger-cli validate ./src/interface/api-outbound.yaml",
    "docker:build": "docker build -t thirdparty-scheme-adapter:local -f ./Dockerfile ./",
    "docker:run": "docker run -p 4005:4005 thirdparty-scheme-adapter:local",
    "lint": "eslint ./src/**/*.ts *.js",
    "pretest": "echo \"pretest - TODO...\"",
    "release": "standard-version",
    "standard": "echo '\\033[1;33m  This project uses eslint instead of standard. Use `npm run lint` instead.'",
    "start": "echo 'use `npm run start:inbound` or `npm run start:outbound`'",
    "start:inbound": "ts-node --project ./tsconfig.json --files --require tsconfig-paths/register ./src/cli.ts inbound",
    "start:outbound": "ts-node --project ./tsconfig.json --files --require tsconfig-paths/register ./src/cli.ts outbound",
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/cli.ts",
    "test": "npm run test:unit",
    "test:bdd": "jest --config './jest.bdd.config.js' --testMatch '**/test/step-definitions/**/*.step.ts'",
    "test:coverage": "jest --coverage --coverageThreshold='{}'",
    "test:coverage-check": "jest --coverage",
    "test:integration": "echo \"test:integration - TODO...\"",
    "test:junit": "jest --reporters=default --reporters=jest-junit",
    "test:unit": "jest --testMatch '**/test/unit/**/*.(test|spec).ts'",
    "watch": "tsc -w"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run test",
      "post-commit": "git update-index --again"
    }
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mojaloop/thirdparty-scheme-adapter.git"
  },
  "keywords": [
    "metrics",
    "central",
    "services",
    "pisp"
  ],
  "author": "Pawe≈Ç Marzec <pawel.marzec@modusbox.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/mojaloop/thirdparty-scheme-adapter/issues"
  },
  "homepage": "https://github.com/mojaloop/thirdpartyscheme-adapter#readme",
  "dependencies": {
    "@hapi/boom": "^9.1.0",
    "@hapi/good": "^9.0.0",
    "@hapi/hapi": "^19.1.1",
    "@hapi/inert": "^6.0.1",
    "@hapi/vision": "^6.0.0",
    "@mojaloop/api-snippets": "^2.0.0",
    "@mojaloop/central-services-error-handling": "^10.6.0",
    "@mojaloop/central-services-health": "^10.6.0",
    "@mojaloop/central-services-logger": "^10.6.0",
    "@mojaloop/central-services-metrics": "^9.5.0",
    "@mojaloop/central-services-shared": "^10.6.2",
    "@mojaloop/sdk-standard-components": "^10.6.8",
    "ajv": "^6.12.3",
    "ajv-keywords": "^3.5.2",
    "blipp": "^4.0.1",
    "commander": "^5.1.0",
    "convict": "^6.0.0",
    "openapi-backend": "^3.5.1",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "@types/convict": "^5.2.1",
    "@types/hapi": "^18.0.3",
    "@types/hapi__hapi": "^19.0.3",
    "@types/hapi__inert": "^5.2.0",
    "@types/hapi__vision": "^5.5.1",
    "@types/jest": "25.2.2",
    "@types/node": "^14.0.20",
    "@types/rc": "^1.1.0",
    "@typescript-eslint/eslint-plugin": "1.13.0",
    "@typescript-eslint/parser": "1.13.0",
    "add": "^2.0.6",
    "eslint": "6.8.0",
    "eslint-config-standard": "14.1.1",
    "eslint-import-resolver-typescript": "^2.2.0",
    "eslint-plugin-cucumber": "^1.4.0",
    "eslint-plugin-import": "2.20.2",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-standard": "4.0.1",
    "husky": "^4.2.5",
    "jest": "26.0.1",
    "jest-cucumber": "^2.0.13",
    "jest-junit": "10.0.0",
    "lint-staged": "^10.2.3",
    "multi-file-swagger": "^2.3.0",
    "nodemon": "^2.0.4",
    "npm-audit-resolver": "2.2.0",
    "npm-check-updates": "6.0.0",
    "source-map-support": "0.5.12",
    "standard-version": "^8.0.2",
    "swagger-cli": "^4.0.3",
    "ts-jest": "^26.0.0",
    "ts-node": "^8.10.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "3.9.2"
  }
}
